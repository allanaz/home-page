---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  imageUrl?: ImageMetadata;
  altText?: string;
  link?: string;
  buttonText?: string;
  footerText?: string;
}

const {
  title,
  description,
  imageUrl,
  altText = "Card image",
  link,
  buttonText = "Learn More",
  footerText
} = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl max-w-sm">
  {imageUrl && (
    <div class="relative h-48 w-full overflow-hidden">
      <Image 
        src={imageUrl} 
        alt={altText} 
        class="object-cover w-full h-full transition-transform duration-500 hover:scale-105"
        width={400}
        height={225}
        quality={80}
      />
    </div>
  )}
  
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{title}</h3>
    <p class="text-gray-700 dark:text-gray-300 mb-4">{description}</p>
    
    {link && (
      <a 
        href={link} 
        class="inline-block px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors duration-300"
      >
        {buttonText}
      </a>
    )}
  </div>
  
  {footerText && (
    <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700 border-t border-gray-100 dark:border-gray-600">
      <p class="text-sm text-gray-500 dark:text-gray-400">{footerText}</p>
    </div>
  )}
</div>